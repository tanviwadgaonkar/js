<!DOCTYPE html>
<html>
<head>
  <title>Compare Strings</title>
</head>
<body>

<h2>Compare Two Strings</h2>

String 1: <input id="str1"><br><br>
String 2: <input id="str2"><br><br>

<button onclick="compareStrings()">Compare Strings</button>

<p id="result"></p>

<script>
function compareStrings() {
  var s1 = document.getElementById("str1").value;
  var s2 = document.getElementById("str2").value;
  var output = "";

  // 1. Using ==
  output += "Using '==': " + (s1 == s2 ? "Equal" : "Not Equal") + "<br>";

  // 2. Using ===
  output += "Using '===': " + (s1 === s2 ? "Equal" : "Not Equal") + "<br>";

  // 3. Case-insensitive comparison
  output += "Case-insensitive comparison: " + (s1.toLowerCase() === s2.toLowerCase() ? "Equal" : "Not Equal") + "<br>";

  // 4. Compare length
  output += "Length comparison: " + (s1.length === s2.length ? "Same length" : "Different length") + "<br>";

  // 5. Using localeCompare
  output += "Using localeCompare: " + (s1.localeCompare(s2) === 0 ? "Equal" : "Not Equal") + "<br>";

  document.getElementById("result").innerHTML = output;
}
</script>

</body>
</html>
