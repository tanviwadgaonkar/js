<!DOCTYPE html>
<html>
<head>
    <title>Simple Calculator</title>
</head>
<body>
    <h2>Simple Calculator</h2>

    <!-- Input fields (type=number) -->
    <label>Enter first number:</label>
    <input type="number" id="num1"><br><br>

    <label>Enter second number:</label>
    <input type="number" id="num2"><br><br>

    <!-- Buttons for operations -->
    <button onclick="add()">Add</button>
    <button onclick="subtract()">Subtract</button>
    <button onclick="multiply()">Multiply</button>
    <button onclick="divide()">Divide</button>
    <button onclick="square()">Square</button>

    <h3>Result: <span id="result"></span></h3>

    <script>
        // Function to get values and check validity
        function getValues() {
            let n1 = document.getElementById("num1").value;
            let n2 = document.getElementById("num2").value;

            if (n1.trim() === "") {
                alert("Please enter a valid first number!");
                return null;
            }
            if (n2.trim() === "") {
                alert("Please enter a valid second number!");
                return null;
            }
            return [parseFloat(n1), parseFloat(n2)];
        }

        function add() {
            let nums = getValues();
            if (nums) document.getElementById("result").innerText = nums[0] + nums[1];
        }

        function subtract() {
            let nums = getValues();
            if (nums) document.getElementById("result").innerText = nums[0] - nums[1];
        }

        function multiply() {
            let nums = getValues();
            if (nums) document.getElementById("result").innerText = nums[0] * nums[1];
        }

        function divide() {
            let nums = getValues();
            if (nums) {
                if (nums[1] == 0) {
                    alert("Division by zero is not allowed!");
                    return;
                }
                document.getElementById("result").innerText = nums[0] / nums[1];
            }
        }

        function square() {
            let n1 = document.getElementById("num1").value;
            if (n1.trim() === "") {
                alert("Please enter a valid number in the first box for squaring!");
                return;
            }
            document.getElementById("result").innerText = n1 * n1;
        }
    </script>
</body>
</html>

